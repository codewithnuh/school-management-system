{
    // Removed schema reference due to accessibility issues
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true, // Important for Sequelize decorators
        "emitDecoratorMetadata": true, // Important for Sequelize decorators
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@routes/*": ["src/routes/*"],
            "@controllers/*": ["src/controllers/*"],
            "@config/*": ["src/config/*"],
            "@models/*": ["src/models/*"]
        },
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/migrations/2025-1-30-create-section.js"],
    "exclude": ["node_modules"]
}
